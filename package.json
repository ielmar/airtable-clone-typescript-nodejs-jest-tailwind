{
  "name": "jest-typescript-starter",
  "version": "1.0.0",
  "description": "A starter for a node app with Jest, Typescript, and some other basic configurations",
  "main": "index.ts",
  "repository": "https://github.com/charlesdobson/jest-typescript-starter.git",
  "author": "charlesdobson <charlesdobson92@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "tailwind:css": "postcss public/styles/tailwind.css -o public/styles/style.css",
    "build": "tsc",
    "serve": "NODE_ENV=development yarn run tailwind:css && nodemon --exec 'ts-node' src/index.ts",
    "start": "NODE_ENV=production node dist/index.js",
    "test": "jest --watchAll",
    "test:ci": "jest --ci",
    "test:coverage": "jest --coverage",
    "lint": "eslint ./src --ext .ts"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/express-ejs-layouts": "^2.5.0",
    "@types/jest": "27.5.2",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "autoprefixer": "^10.4.13",
    "eslint": "8.11.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "nodemon": "2.0.15",
    "prettier": "2.5.1",
    "ts-jest": "27.1.5",
    "ts-node": "^10.9.1",
    "typescript": "4.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./*.{js,ts}": [
      "npx prettier --write",
      "yarn run lint"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    }
  },
  "dependencies": {
    "body-parser": "^1.20.3",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-ejs-layouts": "^2.5.1",
    "tailwindcss": "^3.2.4"
  }
}
